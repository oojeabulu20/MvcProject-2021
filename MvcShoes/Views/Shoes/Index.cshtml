@model IEnumerable<MvcShoes.Models.Shoes>

@{
    ViewData["Title"] = "Index";
}
    <link rel="stylesheet" href="~/css/site.css" />
<h1>Shoe List</h1>

<p>
    <a asp-action="Create">Create New Shoe</a>
</p>

<form asp-controller="Shoes" asp-action="Index" method="get">
    <p>
        Title: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ShoeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ShoeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ShoesId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ShoesId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ShoesId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
